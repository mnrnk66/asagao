<% @page_title = "会員情報の詳細" %>

<h1><%= @page_title %></h1>

<p><%= link_to "編集", [:edit, @member] %></p>

<table class="attr">
  <tr>
    <th width="150">背番号</th>
    <td><%= @member.number %></td>
  </tr>
  <tr>
    <th>ニックネーム</th>
    <td><%= @member.name %></td>
  </tr>
  <tr>
    <th>氏名</th>
    <td><%= @member.full_name %></td>
  </tr>
  <tr>
    <th>性別</th>
    <td><%= @member.gender %></td>
  </tr>
  <tr>
    <th>誕生日</th>
    <td><%= @member.birthday %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @member.email %></td>
  </tr>
  <tr>
    <th>管理者</th>
    <td><%= @member.administrator? ? "○": "-" %></td>
  </tr>
</table>
